@using RealEstateApp.Core.Application.ViewModels.User;
@model SaveUserViewModel
@{
    ViewData["Title"] = "Registro";
}
<div class="main-content">
<div class="row mt-5">
    <div class="col-6 offset-3 ">
        <div class="wrapper">
            <div class="">
                <div class="card-body">

                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                        <form method="post" asp-controller="User" asp-action="Register" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <h1 class="mb-4">Registro de Nuevo Usuario</h1>
                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Seleccione una Foto:</label>
                            <input asp-for="File" class="form-control" required/>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">Nombre: </label>
                            <input asp-for="FirstName" class="form-control" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Apellido: </label>
                                <input asp-for="LastName" class="form-control" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                            <div class="mb-3">
                                <label asp-for="IdentificationCard" class="form-label">Cedula: </label>
                                <input asp-for="IdentificationCard" class="form-control" required />
                                <span asp-validation-for="IdentificationCard" class="text-danger"></span>
                            </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Nombre de usuario: </label>
                                <input asp-for="Username" class="form-control" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Contraseña: </label>
                                <input asp-for="Password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar contraseña: </label>
                                <input asp-for="ConfirmPassword" class="form-control" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Telefono: </label>
                                <input asp-for="PhoneNumber" class="form-control" oninput="formatPhoneNumber(this)" placeholder="xxx-xxx-xxxx" required />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Correo: </label>
                                <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                            <div class="mb-3">
                                <label asp-for="Role" class="form-label">Tipo de Usuario: </label>
                                <select asp-for="Role" class="form-select" required>
                                    <option value="Client">Cliente</option>
                                    <option value="Agent">Agente</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>



                        <div class="button-group">
                            <button type="submit" class="btn btn-outline-success">Guardar</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning">Volver Atrás</a>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>
</div>
</div>

<script>
    function formatPhoneNumber(input) {
        var phoneNumber = input.value.replace(/\D/g, '');

        var formattedPhoneNumber = phoneNumber.substring(0, 3) + '-' + phoneNumber.substring(3, 6) + '-' + phoneNumber.substring(6);

        input.value = formattedPhoneNumber;
    }
</script>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}