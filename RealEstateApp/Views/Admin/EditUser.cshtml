@using RealEstateApp.Core.Application.Enums
@using RealEstateApp.Core.Application.ViewModels.User;
@model SaveUserViewModel;
@{
    ViewData["Title"] = "Editar Usuario";

}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card m-4 border-0 rounded-3 shadow">
                <div class="card-header bg-primary bg-gradient text-light p-2">
                    <h4 class="m-2 display-6">Editar usuario</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Admin" asp-action="EditUser" novalidate>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <p>@Html.ValidationSummary(false, "")</p>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label main-text">Nombre</label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label main-text">Apellido</label>
                            <input asp-for="LastName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdentificationCard" class="form-label main-text">Cédula</label>
                            <input asp-for="IdentificationCard" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label main-text">Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>


                        <div class="mb-3">
                            <label asp-for="Username" class="form-label main-text">Nombre de usuario</label>
                            <input asp-for="Username" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label main-text">Contraseña</label>
                            <input asp-for="Password" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label main-text">Confirmar Contraseña</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                        </div>

                        <input type="hidden" asp-for="Role" />

                        <div class="d-flex justify-content-end">
                            <a asp-controller="Admin" asp-action="UsersMaintenance" asp-route-role="@Model.Role" class="btn btn-outline-danger m-2">Volver Atrás</a>
                            <button type="submit" class="btn btn-primary m-2">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>